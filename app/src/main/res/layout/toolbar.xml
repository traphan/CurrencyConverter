<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
    ></androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_left"
            app:layout_constraintGuide_percent="0.05"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_right"
            app:layout_constraintGuide_percent="0.95"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_top"
            app:layout_constraintGuide_percent="0.47"
            android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_bottom"
            app:layout_constraintGuide_percent="0.53"
            android:orientation="horizontal"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/toolbar_image_menu_size"
            android:layout_height="@dimen/toolbar_image_menu_size"
            android:scaleType="fitXY"
            android:id="@+id/menu"
            android:visibility="gone"
            android:src="@drawable/menu_btn"
            android:background="@null"
            app:layout_constraintTop_toTopOf="@+id/guideline_top"
            app:layout_constraintStart_toStartOf="@+id/guideline_left"
            app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/toolbar_image_size"
            android:layout_height="@dimen/toolbar_image_size"
            android:scaleType="fitXY"
            android:id="@+id/all_currency"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="@+id/guideline_right"
            android:src="@drawable/ic_checklist"
            app:layout_constraintTop_toTopOf="@+id/guideline_top"
            app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"/>


    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/toolbar_image_size"
            android:layout_height="@dimen/toolbar_image_size"
            android:id="@+id/calculate_btn"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/ic_calculation"
            android:layout_marginRight="@dimen/margin_toolbar_btn"
            app:layout_constraintEnd_toStartOf="@+id/all_currency"
            app:layout_constraintTop_toTopOf="@+id/guideline_top"
            app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>